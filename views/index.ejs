<div class="welcome-screen" id="welcomeScreen">
  <div class="pokeball-container">
    <div class="pokeball">
      <div class="pokeball-top"></div>
      <div class="pokeball-bottom"></div>
      <div class="pokeball-center">
        <div class="pokeball-button"></div>
      </div>
    </div>
  </div>

  <div class="welcome-content">
    <h1 class="welcome-title">Welcome to Pokémon Network!</h1>
    <p class="welcome-subtitle">
      Discover personalized messages for LinkedIn professionals
    </p>

    <div class="welcome-actions">
      <div class="search-section">
        <h2>Find Your Pokémon Message</h2>
        <div class="search-container">
          <input
            type="text"
            id="pokemonSearch"
            placeholder="Enter a Pokémon name (e.g., Pikachu, Charizard...)"
            class="search-input"
          />
          <button onclick="searchPokemon()" class="search-btn">
            <i class="fas fa-search"></i>
            Find Message
          </button>
        </div>
        <div id="searchResult" class="search-result"></div>
      </div>

      <div class="divider">
        <span>OR</span>
      </div>

      <button onclick="showAllPokemon()" class="view-all-btn">
        <i class="fas fa-th-large"></i>
        View All Pokémon Cards
      </button>
    </div>
  </div>
</div>

<div class="main-content" id="mainContent" style="display: none">
  <div class="back-to-search">
    <button onclick="showWelcome()" class="back-btn">
      <i class="fas fa-arrow-left"></i>
      Back to Search
    </button>
  </div>

  <div class="hero-section">
    <h1 class="hero-title">Pokémon Cards Collection</h1>
    <p class="hero-subtitle">Personalized messages for my LinkedIn network</p>
    <div class="docker-badge">
      <i class="fab fa-docker"></i>
      <span>Powered by Docker</span>
    </div>
    <button onclick="generatePokemonOfTheDay()" class="pokemon-day-btn">
      <i class="fas fa-dice"></i>
      Generate Pokémon of the Day
    </button>
  </div>

  <section class="pokemon-grid">
    <div class="grid-container">
      <% pokemons.forEach((pokemon, index) => { %>
      <div
        class="pokemon-card"
        data-index="<%= pokemon.originalIndex !== undefined ? pokemon.originalIndex : index %>"
      >
        <div class="card-image">
          <img
            src="<%= pokemon.image %>"
            alt="<%= pokemon.pokemonName %>"
            loading="lazy"
          />
          <div class="card-overlay">
            <i class="fas fa-eye"></i>
            <span>View Message</span>
          </div>
        </div>
        <div class="card-content">
          <h3 class="pokemon-name"><%= pokemon.pokemonName %></h3>
          <div class="user-info">
            <a
              href="<%= pokemon.userProfile %>"
              target="_blank"
              class="linkedin-link"
            >
              <i class="fab fa-linkedin"></i>
              <span><%= pokemon.userName %></span>
            </a>
            <% if (pokemon.userTitle) { %>
            <p class="user-title"><%= pokemon.userTitle %></p>
            <% } %>
          </div>
        </div>
      </div>
      <% }); %>
    </div>
  </section>

  <% if (pokemons.length === 0) { %>
  <div class="empty-state">
    <i class="fas fa-search"></i>
    <h2>No Pokémon Found</h2>
    <p>Looks like the Pokédex is empty. Check back later!</p>
  </div>
  <% } %>
</div>
